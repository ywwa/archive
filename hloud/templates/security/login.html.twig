{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">

        {{ form_start(authentificationForm) }}
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="container">
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            {{ form_widget(authentificationForm.username, { value: last_username }) }}
                            <label for="authentification_form_username">
                                {% trans from 'messages'%}Username{% endtrans %}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating">
                            {{ form_widget(authentificationForm.plainPassword) }}
                            <label for="authentification_form_plainPassword">
                                {% trans from 'messages' %}Password{% endtrans %}
                            </label>
                        </div>
                    </div>
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="row mb-3">
                    <div class="col checkbox">
                        <label>
                            <input type="checkbox" name="_remember_me">
                            {% trans from 'messages' %}Remember me{% endtrans %}
                        </label>
                    </div>
                    <div class="col text-end text-muted">
                            <small>
                                {% trans from 'messages' %}Not a member yet?{% endtrans %}
                                <a href="{{ url('app_register') }}"
                                    class="link text-decoration-none"
                                    role="link"
                                >
                                    {% trans from 'messages' %}Sign up{% endtrans %}
                                </a>
                            </small>
                        </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <button class="btn btn-lg btn-outline-dark px-5" type="submit">
                            {% trans from 'messages' %}Sign in{% endtrans %}
                        </button>
                    </div>
                </div>

            </div>
        {{ form_end(authentificationForm) }}

    </div>











